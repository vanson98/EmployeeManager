<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:EmployeeManager.Components">

    <Style x:Key="changeViewButton" TargetType="Button">
        <Setter Property="Width" Value="56"/>
        <Setter Property="Height" Value="56"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Margin" Value="5 0"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="50" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1">
                        <ContentPresenter/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style TargetType="{x:Type local:AppLayout}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:AppLayout}">
                    <Grid>
                        <Border>
                            <Border.Background>
                                <!--<VisualBrush>
                                     <VisualBrush.Visual>
                                         <Image Source="/Images/window-bg-image.png">
                                             <Image.BitmapEffect>
                                                 <BlurBitmapEffect Radius="5" />
                                             </Image.BitmapEffect>
                                         </Image>
                                     </VisualBrush.Visual>
                                 </VisualBrush>-->
                                <ImageBrush ImageSource="/Images/window-bg-image.png" Opacity="1" />
                            </Border.Background>
                        </Border>
                        
                        <Grid Margin="24">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="80" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <!--  Window Header  -->
                            <DockPanel Grid.Row="0" LastChildFill="True">
                                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                    <Image
                                        Width="80"
                                        Height="80"
                                        Source="/Images/team.png"
                                        Stretch="Fill" />
                                    <TextBlock
                                        Width="320"
                                        Height="39"
                                        Margin="-10,0,0,10"
                                        VerticalAlignment="Center"
                                        FontSize="32"
                                        Foreground="White"
                                        Text="Danh sách nhân viên" />
                                </StackPanel>
                                <StackPanel
                                    Width="376"
                                    Height="72"
                                    HorizontalAlignment="Right"
                                    DockPanel.Dock="Right"
                                    Orientation="Horizontal">
                                    <Border
                                        Width="296px"
                                        Height="72"
                                        Margin="0,0,15,0"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        CornerRadius="36">
                                        <Border.Background>
                                            <SolidColorBrush Opacity="0.3" Color="#527c9d" />
                                        </Border.Background>
                                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                            <Button Style="{StaticResource changeViewButton}">
                                                <Image
                                                    Width="24"
                                                    Height="24"
                                                    Source="/Images/chart-icon.png" />
                                            </Button>
                                            <Button
                                                Background="#527c9b"
                                                BorderBrush="#fff"
                                                Style="{StaticResource changeViewButton}">
                                                <Image
                                                    Width="24"
                                                    Height="24"
                                                    Source="/Images/person-icon.png" />
                                            </Button>
                                            <Button Style="{StaticResource changeViewButton}">
                                                <Image
                                                    Width="24"
                                                    Height="24"
                                                    Source="/Images/bell-icon.png" />
                                            </Button>
                                            <Button Style="{StaticResource changeViewButton}">
                                                <Image
                                                    Width="24"
                                                    Height="24"
                                                    Source="/Images/music-icon.png" />
                                            </Button>
                                        </StackPanel>
                                    </Border>
                                    <Border
                                        Width="64"
                                        Height="64"
                                        CornerRadius="50">
                                        <Border.Background>
                                            <SolidColorBrush Opacity="0.3" Color="#527c9d" />
                                        </Border.Background>
                                        <Image Width="48" Source="/Images/avartar.png" />
                                    </Border>
                                </StackPanel>
                            </DockPanel>
                            <Grid Grid.Row="1" Margin="0,24,0,0">
                                <ContentControl x:Name="viewControl" Content="{TemplateBinding Content}" />
                            </Grid>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>