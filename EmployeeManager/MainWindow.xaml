<Window x:Class="EmployeeManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmployeeManager"
        xmlns:views="clr-namespace:EmployeeManager.Views"
        mc:Ignorable="d"
        Width="1080" Height="720" WindowStartupLocation="CenterScreen" >
    <Window.Resources>
        <Style x:Key="changeViewButton" TargetType="Button">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Margin" Value="5 0"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="50" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Border>
        <Border.Background>
            <ImageBrush ImageSource="/Images/window-bg-image.png" Opacity="1" />
        </Border.Background>
        <Grid>
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <DockPanel LastChildFill="True" Grid.Row="0" Margin="0 0 0 20">
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                        <Image Source="/Images/team.png" Stretch="Fill"/>
                        <TextBlock Text="Danh sách nhân viên" FontSize="25" Foreground="White" VerticalAlignment="Center" Margin="-10 0 0 8"/>
                    </StackPanel>
                    <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Border Width="200px" Height="50" Margin="0 0 15 0" Background="#527C9B4D" CornerRadius="25" VerticalAlignment="Center" HorizontalAlignment="Right">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Style="{StaticResource changeViewButton}">
                                    <Image Source="/Images/chart-icon.png" Width="15" Height="15"/>
                                </Button>
                                <Button Style="{StaticResource changeViewButton}" BorderBrush="#fff" Background="#527c9b">
                                    <Image Source="/Images/person-icon.png" Width="15" Height="15"/>
                                </Button>
                                <Button Style="{StaticResource changeViewButton}">
                                    <Image Source="/Images/bell-icon.png" Width="15" Height="15"/>
                                </Button>
                                <Button Style="{StaticResource changeViewButton}">
                                    <Image Source="/Images/music-icon.png" Width="15" Height="15"/>
                                </Button>
                            </StackPanel>
                        </Border>

                        <Border Width="50" Height="50" CornerRadius="25" Background="#527c9bd9">
                            <Image Source="/Images/avartar.png" Width="40"/>
                        </Border>
                    </StackPanel>
                </DockPanel>
                <views:EmployeeList Grid.Row="1"/>
            </Grid>
        </Grid>
    </Border>

</Window>
