<Window x:Class="EmployeeManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmployeeManager"
        xmlns:views="clr-namespace:EmployeeManager.Views"
        mc:Ignorable="d"
        Width="1920" Height="1080" WindowStartupLocation="CenterScreen" >
    <Window.Resources>
        <Style x:Key="changeViewButton" TargetType="Button">
            <Setter Property="Width" Value="56"/>
            <Setter Property="Height" Value="56"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Margin" Value="5 0"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="50" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Border>
        <Border.Background>
            <ImageBrush ImageSource="/Images/window-bg-image.png" Opacity="1" />
        </Border.Background>
        <Grid>
            <Grid Margin="24">
                <Grid.RowDefinitions>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <!--Window Header-->
                <DockPanel LastChildFill="True" Grid.Row="0">
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                        <Image Source="/Images/team.png" Stretch="Fill" Width="80" Height="80"/>
                        <TextBlock Text="Danh sách nhân viên" FontSize="32" Foreground="White" Width="320" Height="39" VerticalAlignment="Center" Margin="-10 0 0 10"/>
                    </StackPanel>
                    <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right" Width="376" Height="72">
                        <Border Width="296px" Height="72" Margin="0 0 15 0" CornerRadius="36" VerticalAlignment="Center" HorizontalAlignment="Right">
                            <Border.Background>
                                <SolidColorBrush Color="#527c9d" Opacity="0.3"/>
                            </Border.Background>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Style="{StaticResource changeViewButton}">
                                    <Image Source="/Images/chart-icon.png" Width="24" Height="24"/>
                                </Button>
                                <Button Style="{StaticResource changeViewButton}" BorderBrush="#fff" Background="#527c9b">
                                    <Image Source="/Images/person-icon.png" Width="24" Height="24"/>
                                </Button>
                                <Button Style="{StaticResource changeViewButton}">
                                    <Image Source="/Images/bell-icon.png" Width="24" Height="24"/>
                                </Button>
                                <Button Style="{StaticResource changeViewButton}">
                                    <Image Source="/Images/music-icon.png" Width="24" Height="24"/>
                                </Button>
                            </StackPanel>
                        </Border>

                        <Border Width="64" Height="64" CornerRadius="50">
                            <Border.Background>
                                <SolidColorBrush Color="#527c9d" Opacity="0.3" />
                            </Border.Background>
                            <Image Source="/Images/avartar.png" Width="48"/>
                        </Border>
                    </StackPanel>
                </DockPanel>
                <Grid Grid.Row="1" Margin="0 16 0 0">
                    <views:EmployeeList Grid.Row="1"/>
                </Grid>
            </Grid>
        </Grid>
    </Border>

</Window>
