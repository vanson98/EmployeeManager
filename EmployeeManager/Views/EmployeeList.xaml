<UserControl x:Class="EmployeeManager.Views.EmployeeList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EmployeeManager.Views"
             xmlns:component="clr-namespace:EmployeeManager.Components"
             mc:Ignorable="d" 
             d:DesignHeight="928" d:DesignWidth="1872">
    <UserControl.Resources>
        <Style x:Key="lightButton" TargetType="Button">
            <Setter Property="Background" Value="#527c9d"/>
            <Setter Property="Height" Value="61"/>
            <Setter Property="Width" Value="123"/>
            <Setter Property="Margin" Value="5 0"/>
            <Setter Property="Foreground" Value="#fff"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="5">
                            <Border.Background>
                                <SolidColorBrush Color="#527c9d" Opacity="0.3"></SolidColorBrush>
                            </Border.Background>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Image Source="/Images/upload.png" Width="24" Height="24" VerticalAlignment="Center" Margin="15 0"/>
                                <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="solidButton" TargetType="Button">
            <Setter Property="Background" Value="#1a5d8d"/>
            <Setter Property="Height" Value="61"/>
            <Setter Property="Width" Value="210"/>
            <Setter Property="Margin" Value="5 0"/>
            <Setter Property="Foreground" Value="#fff"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="5">
                            <Border.Background>
                                <SolidColorBrush Color="#527c9d" Opacity="0.3"></SolidColorBrush>
                            </Border.Background>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Images/plus-icon.png" Width="24" Height="24" VerticalAlignment="Center" Margin="15 0 15 0"/>
                                <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Border Grid.Row="1" CornerRadius="10">
        <Border.Background>
            <SolidColorBrush Color="#527c9b" Opacity="0.3" />
        </Border.Background>
        <StackPanel Margin="10">
            <DockPanel Height="61" LastChildFill="True">
                <component:CustomComboBox Tag="Chức vụ" VerticalAlignment="Center"/>
                <TextBox Width="250" Height="50"></TextBox>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Button HorizontalAlignment="Right" Margin="0 0 20 0 " Content="Export" Style="{StaticResource lightButton}"></Button>
                    <Button HorizontalAlignment="Right" Content="Thêm nhân viên" Style="{StaticResource solidButton}"></Button>
                </StackPanel>
            </DockPanel>

            <!--Begin User Data Grid-->
            <DataGrid ItemsSource="{Binding Employees}">
                <DataGrid.Columns>
                    <DataGridCheckBoxColumn CanUserResize="False" Width="Auto">
                        <DataGridCheckBoxColumn.HeaderTemplate>
                            <DataTemplate>
                                <CheckBox/>
                            </DataTemplate>
                        </DataGridCheckBoxColumn.HeaderTemplate>
                    </DataGridCheckBoxColumn>

                    <DataGridTemplateColumn Header="Họ tên" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Border Width="25" Height="25" CornerRadius="25"></Border>
                                    <TextBlock Text="{Binding Name}"></TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Header="Email" Width="100" Binding="{Binding Email}">

                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Ngày sinh" Width="120" Binding="{Binding Dob}">

                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Chức vụ" Width="100" Binding="{Binding Role}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Create date" Width="100" Binding="{Binding CreatedDate}"/>
                    <DataGridTemplateColumn Header="Status" Width="150">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border>
                                    <TextBlock Text="{Binding Status}"></TextBlock>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Action" Width="80"></DataGridTemplateColumn>

                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Border>
</UserControl>
