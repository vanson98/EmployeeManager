<UserControl
    x:Class="EmployeeManager.Views.EmployeeInfo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="clr-namespace:EmployeeManager.Components"
    xmlns:converter="clr-namespace:EmployeeManager.Controls.Converter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EmployeeManager.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:EmployeeManager.ViewModels"
    d:DesignHeight="937"
    d:DesignWidth="1872"
    mc:Ignorable="d">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <converter:TypeToStringConverter x:Key="TypeToString" />
        <converter:DateTimeToStringConverter x:Key="DateTimeToString" />
        <Style x:Key="tabButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#fff" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="infoButton" TargetType="Button">
            <Setter Property="Width" Value="280" />
            <Setter Property="Height" Value="56" />
            <Setter Property="Margin" Value="0,0,0,16" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Foreground" Value="#fff" />
            <Setter Property="Opacity" Value="0.5" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="#43AFFF"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="30">
                            <ContentPresenter />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="EmployeeListBoxItem" TargetType="{x:Type ListBoxItem}">
            <Setter Property="SnapsToDevicePixels" Value="true" />
            <Setter Property="OverridesDefaultStyle" Value="True" />
            <Setter Property="Background" Value="#527c9d" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Grid Margin="0,12,0,0">
                            <Border
                                Name="Border"
                                Padding="0"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Opacity="0.3"
                                SnapsToDevicePixels="True" />
                            <ContentPresenter />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="true">
                                <Setter Property="Background" Value="Gray" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Foreground" Value="Green" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="304" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <!--  Left Assign  -->
        <Grid Margin="0,0,24,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="48" />
                <RowDefinition Height="53" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <!--  Search Panel Header  -->
            <Grid Grid.Row="0" VerticalAlignment="Top">
                <TextBlock
                    HorizontalAlignment="Left"
                    FontSize="18"
                    Foreground="#fff"
                    Text="Tìm kiếm" />
                <Image
                    Width="24"
                    Height="24"
                    HorizontalAlignment="Right"
                    Source="/Images/search2.png" />
            </Grid>
            <!--  Tab buttons  -->
            <UniformGrid
                Grid.Row="1"
                Height="41"
                Margin="4"
                Background="#2E3E49"
                Columns="3">
                <Button
                    Grid.Column="0"
                    Margin="4,4,1,4"
                    Command="{Binding FilterEmployeeTabListCommand}"
                    CommandParameter="All"
                    Content="All">
                    <Button.Style>
                        <Style BasedOn="{StaticResource tabButton}" TargetType="Button">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CurrentTabListBox}" Value="All">
                                    <Setter Property="Background" Value="#527C9B" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button
                    Grid.Column="1"
                    Margin="1,4,1,4"
                    Command="{Binding FilterEmployeeTabListCommand}"
                    CommandParameter="Team"
                    Content="Team">
                    <Button.Style>
                        <Style BasedOn="{StaticResource tabButton}" TargetType="Button">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CurrentTabListBox}" Value="Team">
                                    <Setter Property="Background" Value="#527C9B" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button
                    Grid.Column="2"
                    Margin="1,4,4,4"
                    Command="{Binding FilterEmployeeTabListCommand}"
                    CommandParameter="Leader"
                    Content="Leader">
                    <Button.Style>
                        <Style BasedOn="{StaticResource tabButton}" TargetType="Button">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CurrentTabListBox}" Value="Leader">
                                    <Setter Property="Background" Value="#527C9B" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </UniformGrid>
            <!--  Employee Card Stack  -->
            <Grid Grid.Row="2">
                <ListBox
                    Background="Transparent"
                    ItemContainerStyle="{StaticResource EmployeeListBoxItem}"
                    ItemsSource="{Binding FilterEmployees}"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    VirtualizingStackPanel.IsVirtualizing="True">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Width="280" Height="120">
                                <Grid Margin="24,12,24,12">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="32" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <DockPanel>
                                        <Border
                                            Width="32"
                                            Height="32"
                                            CornerRadius="50"
                                            DockPanel.Dock="Left">
                                            <Border.Background>
                                                <ImageBrush ImageSource="{Binding AvatarPath}" />
                                            </Border.Background>
                                        </Border>
                                        <Image
                                            Width="20"
                                            Height="20"
                                            HorizontalAlignment="Right"
                                            DockPanel.Dock="Right"
                                            Source="/Images/more-horizontal.png" />
                                    </DockPanel>
                                    <DockPanel Grid.Row="1" Margin="0,4,0,0">
                                        <TextBlock
                                            DockPanel.Dock="Top"
                                            FontSize="18"
                                            Foreground="#fff"
                                            Text="{Binding Name}" />
                                        <TextBlock
                                            VerticalAlignment="Bottom"
                                            DockPanel.Dock="Bottom"
                                            FontSize="14"
                                            Foreground="#cad3d7"
                                            Text="{Binding Role}" />
                                    </DockPanel>
                                </Grid>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Grid>
        <!--  Main Component  -->
        <Grid Grid.Column="1">
            <Border
                Background="#527c9d"
                CornerRadius="24"
                Opacity="0.3" />
            <Grid Margin="24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="384" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Border
                    Margin="0,0,24,0"
                    Background="#527c9d"
                    CornerRadius="24"
                    Opacity="0.3" />

                <!--  Main Left Component  -->
                <DockPanel Margin="0,0,24,0">
                    <StackPanel
                        Width="280"
                        Height="206"
                        Margin="40,40,40,0"
                        DockPanel.Dock="Top">
                        <Grid>
                            <Border
                                Width="121"
                                Height="121"
                                HorizontalAlignment="Center"
                                Background="#fff"
                                CornerRadius="100">
                                <Ellipse Width="120" Height="120">
                                    <Ellipse.Fill>
                                        <ImageBrush ImageSource="/Images/Profil.png" />
                                    </Ellipse.Fill>
                                </Ellipse>
                            </Border>
                            <Image
                                Width="24"
                                Height="24"
                                Margin="0,0,-80,0"
                                VerticalAlignment="Bottom"
                                Source="/Images/Group 21289.png" />
                        </Grid>

                        <StackPanel
                            Margin="0,24,0,0"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal">
                            <TextBlock
                                Margin="0,-5,10,0"
                                VerticalAlignment="Center"
                                FontSize="28"
                                Foreground="#fff"
                                Text="{Binding EmployeeDetailData.Name, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                            <Border
                                Width="51"
                                Height="20"
                                HorizontalAlignment="Right"
                                Background="#B9CCB8"
                                CornerRadius="4">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="10"
                                    Foreground="#0b9300"
                                    Text="Member" />
                            </Border>
                        </StackPanel>
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="20"
                            Foreground="#A0ABB4"
                            Text="{Binding EmployeeDetailData.Role, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                    </StackPanel>
                    <StackPanel
                        Width="280"
                        Height="128"
                        Margin="0,40"
                        DockPanel.Dock="Top">
                        <Button Command="{Binding ViewUpdateFormComponentCommand}">
                            <StackPanel Orientation="Horizontal">
                                <Image
                                    Width="24"
                                    Height="24"
                                    Margin="24,0,0,0"
                                    Source="/Images/user.png" />
                                <TextBlock
                                    Margin="24,0"
                                    VerticalAlignment="Center"
                                    FontSize="20"
                                    Foreground="#fff"
                                    Text="Thông tin nhân viên" />
                            </StackPanel>
                            <Button.Style>
                                <Style BasedOn="{StaticResource infoButton}" TargetType="Button">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding CurrentTabViewModel, Converter={StaticResource TypeToString}}" Value="EmployeeUpdateFormViewModel">
                                            <Setter Property="Background" Value="#527C9B" />
                                            <Setter Property="BorderThickness" Value="2" />
                                            <Setter Property="Foreground" Value="#fff" />
                                            <Setter Property="Opacity" Value="1" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button Command="{Binding ViewChartComponentCommand}">
                            <StackPanel Orientation="Horizontal">
                                <Image
                                    Width="24"
                                    Height="24"
                                    Margin="24,0,0,0"
                                    Source="/Images/grid.png" />
                                <TextBlock
                                    Margin="24,0"
                                    VerticalAlignment="Center"
                                    FontSize="20"
                                    Foreground="#fff"
                                    Text="Dữ liệu làm việc" />
                            </StackPanel>
                            <Button.Style>
                                <Style BasedOn="{StaticResource infoButton}" TargetType="Button">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding CurrentTabViewModel, Converter={StaticResource TypeToString}}" Value="EmployeeChartViewModel">
                                            <Setter Property="Background" Value="#527C9B" />
                                            <Setter Property="BorderThickness" Value="2" />
                                            <Setter Property="Foreground" Value="#fff" />
                                            <Setter Property="Opacity" Value="1" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                    <StackPanel
                        Width="123"
                        Height="61"
                        Margin="40,0,0,40"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Bottom"
                        DockPanel.Dock="Top">
                        <TextBlock
                            FontSize="20"
                            Foreground="#A0ABB4"
                            Text="Thời gian tạo" />
                        <TextBlock
                            Margin="0,10,0,0"
                            FontSize="18"
                            Foreground="#fff"
                            Text="{Binding EmployeeDetailData.CreatedDate,Converter={StaticResource DateTimeToString}, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                    </StackPanel>
                </DockPanel>
                <!--  Main Body Component  -->
                <Grid Grid.Column="1">
                    <ContentControl Content="{Binding CurrentTabViewModel, Mode=OneWay}">
                        <ContentControl.Resources>
                            <DataTemplate DataType="{x:Type viewmodels:EmployeeUpdateFormViewModel}">
                                <components:EmployeeInfoUpdateForm Grid.Row="1" EmployeeData="{Binding EmployeeDetailData, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                            </DataTemplate>
                            <DataTemplate DataType="{x:Type viewmodels:EmployeeChartViewModel}">
                                <components:EmployeeInfoChart Grid.Row="1" RelatedEmployees="{Binding Employees}" EmployeeInfo="{Binding EmployeeDetailData, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                            </DataTemplate>
                        </ContentControl.Resources>
                    </ContentControl>
                    <!--  Form Info  -->
                    <!--  Chart Info  -->

                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
