                        Margin="0,0,13.5,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Source="/Images/edit-3.png" />
                    </Grid>
                    <StackPanel
                    Margin="0,56,0,0"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                        <Button Background="Transparent" Style="{StaticResource formButton}">

                            <TextBlock
                            Margin="24,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="20"
                            Foreground="#fff"
                            Text="Hủy" />
                        </Button>
                        <Button Background="#338ACB" Style="{StaticResource formButton}">

                            <TextBlock
                            Margin="24,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="20"
                            Foreground="#fff"
                            Text="Lưu" />
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
    

</UserControl>
