<UserControl
    x:Class="EmployeeManager.Components.EmployeeInfoUpdateForm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EmployeeManager.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="840"
    d:DesignWidth="1136"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="infoTextbox" TargetType="TextBox">
            <Setter Property="Background" Value="#768B9B" />
            <Setter Property="Foreground" Value="#fff" />
            <Setter Property="Height" Value="56" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="Padding" Value="16,13.5" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBoxBase}">
                        <Border
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="24"
                            SnapsToDevicePixels="True">
                            <ScrollViewer
                                x:Name="PART_ContentHost"
                                Focusable="false"
                                HorizontalScrollBarVisibility="Hidden"
                                VerticalScrollBarVisibility="Hidden" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter TargetName="border" Property="BorderBrush" Value="Green" />
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="true">
                                <Setter TargetName="border" Property="BorderBrush" Value="red" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="formButton" TargetType="Button">
            <Setter Property="Width" Value="240" />
            <Setter Property="Margin" Value="24,0,0,0" />
            <Setter Property="Width" Value="280" />
            <Setter Property="Height" Value="56" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="#43AFFF"
                            BorderThickness="2"
                            CornerRadius="30">
                            <ContentPresenter />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Border
            Grid.RowSpan="2"
            Background="#527c9d"
            CornerRadius="24"
            Opacity="0.3" />
        <Grid Margin="40 40 40 123">
            <Grid.RowDefinitions>
                <RowDefinition Height="45" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock
            FontSize="28"
            Foreground="#fff"
            Text="Thông tin cá nhân" />
            <Grid Grid.Row="1">
                <StackPanel Grid.Row="1">
                    <Label
                    Margin="0,24,0,4"
                    Content="Họ và tên"
                    FontSize="16"
                    Foreground="#A0ABB4" />
                    <Grid Height="56">
                        <!--<TextBlock Text="Nhập họ và tên" FontSize="18" Foreground="#A0ABB4" VerticalAlignment="Center" Margin="16 13.5" IsHitTestVisible="False"
                        Panel.ZIndex="1" Visibility="{Binding ElementName=infoTextbox, Path=Text.IsEmpty, Converter={StaticResource BoolToVis}}"/>-->
                        <TextBox Style="{StaticResource infoTextbox}" Text="Nguyen Van Son" />
                        <Image
                        Width="24"
                        Height="24"
                        Margin="0,0,13.5,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Source="/Images/edit-3.png" />
                    </Grid>
                    <Label
