    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="889"
    d:DesignWidth="1136"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="335" />
        </Grid.RowDefinitions>
        <Grid>
            <Border
                Margin="0,0,12,0"
                Background="#527c9d"
                CornerRadius="24"
                Opacity="0.4" />
            <DockPanel Margin="24,24,24,24">
                <DockPanel DockPanel.Dock="Top">
                    <TextBlock
                        FontSize="24"
                        FontWeight="SemiBold"
                        Foreground="#fff"
                        Text="Thống kê đi muộn" />
                    <ComboBox
                        Width="120"
                        Height="35"
                        HorizontalAlignment="Right" />
                </DockPanel>
                <Grid
                    Width="342"
                    Height="342"
                    Margin="83,0,83,0"
                    DockPanel.Dock="Top">
                    <lvc:PieChart Series="{Binding PieChartSeries}" InitialRotation="-90">
                    </lvc:PieChart>
                    <TextBlock Text="30 ngày" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="25"/>
                </Grid>

                <Grid
                    Height="79"
                    Margin="0,0,0,0"
                    VerticalAlignment="Bottom">
                    <StackPanel
                        Width="102"
                        Height="79"
                        HorizontalAlignment="Left">
                        <TextBlock
                            Margin="0,0,0,6"
                            HorizontalAlignment="Center"
                            FontSize="36"
                            Foreground="#3FFF30"
                            Text="{Binding Employee.OnTime}" />
                        <TextBlock
                            Height="33"
                            Margin="0,-8,0,0"
                            FontSize="24"
                            Foreground="#fff"
                            Text="Đúng giờ"
                            TextAlignment="Center" />
                    </StackPanel>
                    <StackPanel
                        Width="102"
                        Height="79"
                        HorizontalAlignment="Center">
                        <TextBlock
                            Margin="0,0,0,6"
                            HorizontalAlignment="Center"
                            FontSize="36"
                            Foreground="#FFBD2F"
                            Text="{Binding Employee.Late}" />
                        <TextBlock
                            Height="33"
                            Margin="0,-8,0,0"
                            FontSize="24"
                            Foreground="#fff"
                            Text="Đi muộn"
                            TextAlignment="Center" />
                    </StackPanel>
                    <StackPanel
                        Width="102"
                        Height="79"
                        HorizontalAlignment="Right">
                        <TextBlock
                            Margin="0,0,0,6"
                            HorizontalAlignment="Center"
                            FontSize="36"
                            Foreground="#FF1400"
                            Text="{Binding Employee.OnLeave}" />
                        <TextBlock
                            Height="33"
                            Margin="0,-8,0,0"
                            FontSize="24"
                            Foreground="#fff"
                            Text="Nghỉ"
                            TextAlignment="Center" />
                    </StackPanel>
                </Grid>
            </DockPanel>
        </Grid>
        <Grid Grid.Column="1">
            <Border
                Margin="12,0,0,0"
                Background="#527c9d"
                CornerRadius="24"
                Opacity="0.4" />
