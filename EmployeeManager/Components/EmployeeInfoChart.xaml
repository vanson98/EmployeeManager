<UserControl
    x:Class="EmployeeManager.Components.EmployeeInfoChart"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EmployeeManager.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="889"
    d:DesignWidth="1136"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="554" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid>
            <Border
                Margin="0,0,12,0"
                Background="#527c9d"
                CornerRadius="24"
                Opacity="0.4" />
            <DockPanel Margin="24 24 24 24">
                <DockPanel DockPanel.Dock="Top">
                    <TextBlock Text="Thống kê đi muộn" Foreground="#fff" FontSize="24" FontWeight="SemiBold"/>
                    <ComboBox HorizontalAlignment="Right" Width="120" Height="35"/>
                </DockPanel>
                <Border Background="Gray" Width="342" Height="342" Margin="83 24 83 0" DockPanel.Dock="Top"/>
                <Grid VerticalAlignment="Bottom" Height="79" Margin="0 26 0 0">
                    <StackPanel Width="102" Height="79" HorizontalAlignment="Left">
                        <TextBlock Text="19" FontSize="36" Foreground="#3FFF30" HorizontalAlignment="Center" Margin="0 0 0 6"/>
                        <TextBlock Text="Đúng giờ" FontSize="24" Foreground="#fff" Height="33" Margin="0 -8 0 0" TextAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Width="102" Height="79" HorizontalAlignment="Center">
                        <TextBlock Text="19" FontSize="36" Foreground="#FFBD2F" HorizontalAlignment="Center" Margin="0 0 0 6"/>
                        <TextBlock Text="Đi muộn" FontSize="24" Foreground="#fff" Height="33" Margin="0 -8 0 0" TextAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Width="102" Height="79" HorizontalAlignment="Right">
                        <TextBlock Text="19" FontSize="36" Foreground="#FF1400" HorizontalAlignment="Center" Margin="0 0 0 6"/>
                        <TextBlock Text="Nghỉ" FontSize="24" Foreground="#fff" Height="33" Margin="0 -8 0 0" TextAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </DockPanel>
        </Grid>
        <Grid Grid.Column="1">
            <Border
                Margin="12,0,0,0"
                Background="#527c9d"
                CornerRadius="24"
                Opacity="0.4" />
        </Grid>
        <Grid Grid.Row="1" Grid.ColumnSpan="2">
            <Border
                Margin="0,24,0,0"
                Background="#527c9d"
                CornerRadius="24"
                Opacity="0.4" />
        </Grid>
    </Grid>
</UserControl>
